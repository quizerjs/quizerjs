{
  "name": "@quizerjs/core",
  "version": "0.0.5",
  "description": "quizerjs 核心 wsx 组件库",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@quizerjs/dsl": "workspace:*",
    "@wsxjs/wsx-core": "^0.1.0",
    "marked": "^11.0.0",
    "turndown": "^7.1.3"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/node": "^20.10.0",
    "@types/turndown": "^5.0.5",
    "@wsxjs/wsx-vite-plugin": "^0.1.0",
    "happy-dom": "^20.3.7",
    "typescript": "^5.3.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^3.2.0"
  },
  "peerDependencies": {
    "@wsxjs/wsx-core": "^0.1.0"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quizerjs/quizerjs.git",
    "directory": "packages/core"
  }
}
