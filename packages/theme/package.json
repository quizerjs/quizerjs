{
  "name": "@quizerjs/theme",
  "version": "0.0.7",
  "description": "QuizerJS Design System - Theme package with CSS Hook API",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "source": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./player": {
      "types": "./dist/player.d.ts",
      "source": "./src/player.ts",
      "import": "./dist/player.mjs",
      "require": "./dist/player.cjs"
    },
    "./editor": {
      "types": "./dist/editor.d.ts",
      "source": "./src/editor.ts",
      "import": "./dist/editor.mjs",
      "require": "./dist/editor.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "quizerjs",
    "theme",
    "design-system",
    "css-variables",
    "css-hook-api"
  ],
  "author": "quizerjs team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@slidejs/theme": "^0.1.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^3.2.0",
    "typescript": "^5.3.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^3.2.0"
  }
}
