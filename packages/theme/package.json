{
  "name": "@quizerjs/theme",
  "version": "0.0.3",
  "description": "QuizerJS Design System - Theme package with CSS Hook API",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "source": "./src/index.ts"
    },
    "./player": {
      "types": "./dist/player.d.ts",
      "import": "./dist/player.mjs",
      "require": "./dist/player.cjs",
      "source": "./src/player.ts"
    },
    "./editor": {
      "types": "./dist/editor.d.ts",
      "import": "./dist/editor.mjs",
      "require": "./dist/editor.cjs",
      "source": "./src/editor.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "quizerjs",
    "theme",
    "design-system",
    "css-variables",
    "css-hook-api"
  ],
  "author": "quizerjs team",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@slidejs/theme": "^0.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.6.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^1.6.1"
  }
}
