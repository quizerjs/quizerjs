{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": [
    "src/**/*",
    "src/**/*.wsx",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/__tests__/**/*.test.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
