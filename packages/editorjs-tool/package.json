{
  "name": "@quizerjs/editorjs-tool",
  "version": "0.0.1",
  "description": "quizerjs 的 Editor.js 工具插件",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@quizerjs/core": "workspace:*",
    "@editorjs/editorjs": "^2.28.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@editorjs/editorjs": "^2.28.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wsxjs/quizerjs.git",
    "directory": "packages/editorjs-tool"
  }
}
