{
  "name": "@quizerjs/quizerjs",
  "version": "0.0.3",
  "description": "quizerjs 主包 - 提供测验编辑器和播放器",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run"
  },
  "dependencies": {
    "@editorjs/editorjs": "^2.28.0",
    "@editorjs/header": "^2.8.8",
    "@editorjs/paragraph": "^2.11.7",
    "@quizerjs/core": "workspace:*",
    "@quizerjs/dsl": "workspace:*",
    "@quizerjs/editorjs-tool": "workspace:*",
    "@quizerjs/theme": "workspace:*",
    "@slidejs/context": "^0.1.8",
    "@slidejs/runner": "^0.1.8",
    "@slidejs/runner-revealjs": "^0.1.8",
    "@slidejs/runner-swiper": "^0.1.8",
    "@slidejs/theme": "^0.1.8",
    "marked": "^11.0.0",
    "reveal.js": "^5.2.1",
    "swiper": "^12.0.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "happy-dom": "^12.10.3",
    "typescript": "^5.3.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^3.2.4"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/quizerjs/quizerjs.git",
    "directory": "packages/quizerjs"
  }
}
