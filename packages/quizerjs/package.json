{
  "name": "@quizerjs/quizerjs",
  "version": "0.0.1",
  "description": "quizerjs 主包 - 提供测验编辑器和播放器",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "source": "./src/index.ts"
    },
    "./editor": {
      "types": "./dist/editor/index.d.ts",
      "import": "./dist/editor/index.mjs",
      "require": "./dist/editor/index.js",
      "source": "./src/editor/index.ts"
    },
    "./player": {
      "types": "./dist/player/index.d.ts",
      "import": "./dist/player/index.mjs",
      "require": "./dist/player/index.js",
      "source": "./src/player/index.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@quizerjs/dsl": "workspace:*",
    "@quizerjs/core": "workspace:*",
    "@quizerjs/editorjs-tool": "workspace:*",
    "@editorjs/editorjs": "^2.28.0",
    "@editorjs/paragraph": "^2.11.7",
    "@editorjs/header": "^2.8.8",
    "marked": "^11.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wsxjs/quizerjs.git",
    "directory": "packages/quizerjs"
  }
}
