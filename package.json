{
  "name": "quizerjs",
  "version": "0.0.1",
  "description": "一个使用 Editor.js 和 wsx 构建测验的开源库",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "demo:dev": "pnpm --filter @quizerjs/demo dev",
    "demo:build": "pnpm --filter @quizerjs/demo build",
    "demo:preview": "pnpm --filter @quizerjs/demo preview",
    "demo-vue:dev": "pnpm --filter @quizerjs/demo-vue dev",
    "demo-vue:build": "pnpm --filter @quizerjs/demo-vue build",
    "demo-vue:preview": "pnpm --filter @quizerjs/demo-vue preview"
  },
  "keywords": [
    "quiz",
    "editorjs",
    "wsx",
    "web-components",
    "jsx"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3",
    "vitepress": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}
