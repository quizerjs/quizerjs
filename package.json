{
  "name": "quizerjs",
  "version": "0.0.1",
  "description": "一个使用 Editor.js 和 wsx 构建测验的开源库",
  "private": true,
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean",
    "clean:all": "pnpm clean && rm -rf node_modules/.vite node_modules/.cache .turbo && pnpm store prune",
    "clean:install": "pnpm clean:all && pnpm install",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "demo:dev": "pnpm --filter @quizerjs/demo-vanilla dev",
    "demo:build": "pnpm --filter @quizerjs/demo-vanilla build",
    "demo:preview": "pnpm --filter @quizerjs/demo-vanilla preview",
    "demo-vue:dev": "pnpm --filter @quizerjs/demo-vue dev",
    "demo-vue:build": "pnpm --filter @quizerjs/demo-vue build",
    "demo-vue:preview": "pnpm --filter @quizerjs/demo-vue preview",
    "demo-react:dev": "pnpm --filter @quizerjs/demo-react dev",
    "demo-react:build": "pnpm --filter @quizerjs/demo-react build",
    "demo-react:preview": "pnpm --filter @quizerjs/demo-react preview",
    "build:svelte": "pnpm --filter @quizerjs/svelte build",
    "demo-svelte:dev": "pnpm --filter @quizerjs/demo-svelte dev",
    "demo-svelte:build": "pnpm --filter @quizerjs/demo-svelte build",
    "demo-svelte:preview": "pnpm --filter @quizerjs/demo-svelte preview"
  },
  "keywords": [
    "quiz",
    "editorjs",
    "wsx",
    "web-components",
    "jsx"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^2.6.3",
    "typescript": "^5.3.3",
    "vitepress": "^1.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}
