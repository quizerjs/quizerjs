{
  "name": "quizerjs",
  "version": "0.0.1",
  "description": "一个使用 Editor.js 和 wsx 构建测验的开源库",
  "private": true,
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "tsx scripts/dev.ts",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean",
    "clean:all": "pnpm clean && rm -rf node_modules/.vite node_modules/.cache .turbo && pnpm store prune",
    "clean:install": "pnpm clean:all && pnpm install",
    "dev:vanilla": "pnpm --filter @quizerjs/demo-vanilla dev",
    "dev:vue": "pnpm --filter @quizerjs/demo-vue dev",
    "dev:react": "pnpm --filter @quizerjs/demo-react dev",
    "dev:svelte": "pnpm --filter @quizerjs/demo-svelte dev",
    "dev:site": "pnpm --filter @quizerjs/site dev",
    "site": "pnpm --filter @quizerjs/site dev",
    "build:vanilla": "cross-env GITHUB_PAGES=true pnpm --filter @quizerjs/demo-vanilla build",
    "build:vue": "cross-env GITHUB_PAGES=true pnpm --filter @quizerjs/demo-vue build",
    "build:react": "cross-env GITHUB_PAGES=true pnpm --filter @quizerjs/demo-react build",
    "build:svelte": "cross-env GITHUB_PAGES=true pnpm --filter @quizerjs/demo-svelte build",
    "build:site": "pnpm --filter @quizerjs/site build",
    "preview:vanilla": "pnpm --filter @quizerjs/demo-vanilla preview",
    "preview:vue": "pnpm --filter @quizerjs/demo-vue preview",
    "preview:react": "pnpm --filter @quizerjs/demo-react preview",
    "preview:svelte": "pnpm --filter @quizerjs/demo-svelte preview",
    "preview:site": "pnpm --filter @quizerjs/site preview",
    "copy:demos": "pnpm --filter @quizerjs/site copy:demos",
    "preview:pages": "pnpm copy:demos && pnpm --filter @quizerjs/site preview:pages",
    "site:typecheck": "pnpm --filter @quizerjs/site typecheck",
    "site:lint": "pnpm --filter @quizerjs/site lint",
    "site:lint:fix": "pnpm --filter @quizerjs/site lint:fix",
    "site:test": "pnpm --filter @quizerjs/site test",
    "build:pages": "pnpm build:react && pnpm build:vue && pnpm build:svelte && pnpm build:vanilla && pnpm --filter @quizerjs/site build:pages",
    "deploy:pages": "pnpm build:pages && pnpm --filter @quizerjs/site deploy:pages"
  },
  "keywords": [
    "quiz",
    "editorjs",
    "wsx",
    "web-components",
    "jsx"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@wsxjs/wsx-press": "^0.0.19",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "eslint-plugin-svelte": "^3.13.1",
    "eslint-plugin-vue": "^10.6.2",
    "husky": "^9.0.11",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1",
    "prettier": "^3.1.0",
    "svelte-eslint-parser": "^1.4.1",
    "tsx": "^4.7.1",
    "turbo": "^2.6.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.49.0",
    "vitepress": "^1.0.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}
